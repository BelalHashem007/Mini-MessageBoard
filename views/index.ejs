<html>
  <head>
    <title>Home page</title>
    <link rel="stylesheet" href="/styles.css" />
  </head>
  <body>
    <div>
      <h2 class="home-title"><%= title%></h2>
      <ul class="messages">
        <% messages.forEach(msg => {%>
        <li>
          <div class="message"><span class="user"><%= msg.user%></span>: <%= msg.text%></div>
          <span class="date"><%= msg.added%></span>
          <a href="/message/<%= msg.id%>">Link</a>
        </li>
        <%})%>
      </ul>
      <div class="btn">
        <a href="/new"><button>Add a message</button></a>
      </div>
    </div>
  </body>
</html>

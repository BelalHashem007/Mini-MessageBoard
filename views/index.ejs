<html>
  <head>
    <title>Home page</title>
    <link rel="stylesheet" href="/styles.css" />
  </head>
  <body>
    <div>
      <h2 class="home-title"><%= title%></h2>
      <ul class="messages">
        <% messages.forEach(msg => {%>
        <li>
          <div class="message"><span class="user"><%= msg.username%></span>: <%= msg.message%></div>
          <span class="date"><%= msg.date%></span>
          <a href="/message/<%= msg.id%>">Link</a>
        </li>
        <%})%>
      </ul>
      <div class="btn">
        <a href="/new"><button>Add a message</button></a>
      </div>
      <% if (locals.errors) {%>
        <ul> <% errors.map(err=>{ %>
          <li style="color: red;"><%= err.msg %></li>
          <%});%>
        </ul>
      <%}%>
    </div>
  </body>
</html>
